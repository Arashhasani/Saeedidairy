<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_yagurt_full_fat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.arash.saeedidairy.ProductPages.MilkPages.YagurtFullFat">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doughtoolbar"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>

        <com.example.arash.saeedidairy.custom.PersianTextyekan
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ماست پر چرب"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:textSize="16dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/action_button_content_margin"
        android:padding="@dimen/action_button_content_margin"
        app:cardElevation="@dimen/action_button_content_margin"
        app:cardCornerRadius="@dimen/action_button_content_margin"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/milk"/>

                <com.example.arash.saeedidairy.custom.PersianFontmorvarid
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/action_button_content_margin"
                    android:text="ماست پر یک محصول عالی"
                    android:textColor="#000"/>
                <com.example.arash.saeedidairy.custom.PersianFontmorvarid
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/action_button_content_margin"
                    android:text="قیمت 0000 تومان"
                    android:textColor="#000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/action_button_content_margin"
                    android:orientation="vertical">
                    <com.example.arash.saeedidairy.custom.PersianFontmorvarid
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/action_button_content_margin"
                        android:text="تعداد : "
                        android:textColor="#000"
                        android:textSize="20dp"/>

                    <com.example.arash.saeedidairy.custom.PersianFontmorvarid
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="30"
                        android:textColor="#000"
                        android:textSize="20dp"/>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_margin="@dimen/action_button_content_margin"
                    android:text="افزودن به سبد خرید"
                    android:textColor="#fff"/>


            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>



</LinearLayout>
